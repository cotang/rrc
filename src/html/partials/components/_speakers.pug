          +b.speaker
            +e.inner
              +e.img
                img(src="img/speakers/starkov.jpg", alt="Пётр Старков")
              +e.text-wrapper
                +e.H3.name Пётр Старков
                +e.text Руководитель департамента корпоративных продаж, Netgear
        +e.slide
          +b.speaker
            +e.inner
              +e.img
                img(src="img/speakers/tihonov.jpg", alt="Павел Тихонов")
