            +e.inner
              +e.img
                img(src="img/speakers/perevyazkin.jpg", alt="Алексей Перевязкин")
              +e.text-wrapper
                +e.H3.name Алексей Перевязкин
                +e.text Директор по работе c корпоративными клиентами, Cisco

